{
  "name": "zbcx-helper",
  "displayName": "智博创享助手",
  "description": "智博创享Web产品研发代码补全智能提示插件",
  "version": "1.2.3",
  "publisher": "EricHu",
  "author": {
    "name": "Eric Hu",
    "email": "568055454@qq.com"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "智博创享",
    "代码补全",
    "智能提示",
    "Vue",
    "JavaScript"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:vue",
    "onCommand:zbcx-helper.zbcx"
  ],
  "main": "dist/extension.js",
  "types": "dist/types/index.d.ts",
  "icon": "images/logo.png",
  "contributes": {
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".js"
        ],
        "aliases": [
          "JavaScript"
        ]
      },
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ],
        "aliases": [
          "Vue"
        ]
      }
    ],
    "commands": [
      {
        "command": "zbcx-helper.zbcx",
        "title": "zbcx",
        "category": "智博创享助手"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p ./ && tsc-alias -p tsconfig.json && node scripts/copy-files.js",
    "watch": "tsc -watch -p ./",
    "package:patch": "node scripts/version-bump.js patch",
    "package:minor": "node scripts/version-bump.js minor",
    "package:major": "node scripts/version-bump.js major",
    "package:revert": "node scripts/version-bump.js revert",
    "publish:patch": "node scripts/version-bump.js patch && vsce package",
    "publish:minor": "node scripts/version-bump.js minor && vsce package",
    "publish:major": "node scripts/version-bump.js major && vsce package",
    "login": "vsce login EricHu"
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/vsce": "^2.24.0",
    "cross-var": "^1.1.0",
    "eslint": "^8.54.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "semver": "^7.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YuluoY/zbcx-helper"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  }
}
