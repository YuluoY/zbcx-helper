{
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"target": "ES2020",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
